{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    {# Inclusion du fichier CSS #}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
</head>
<body>

{% include 'partials/header.html.twig' %}

<div class="container">
    {% block body %}{% endblock %}
</div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js" integrity="sha384-6g3VRbGTAtYzrF/gX2VrNkD9V4bmlTVT9yZ13YZ+UE6dY2Bbbt6Bl0uo/NM7FKOpT" crossorigin="anonymous"></script>
    {% block javascripts %}
        {# Inclusion du fichier JavaScript #}
        <script src="{{ asset('js/app.js') }}"></script>
    {% endblock %}
</body>
</html>

